<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/pic_jose3">

            <TextView
                android:id="@+id/jose_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:text="@string/message_jose"/>
        </LinearLayout>
        <Button
            android:id="@+id/feels_button_jose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:layout_marginBottom="40dp"
            android:text="Feels"/>
        <Button
            android:id="@+id/no_feels_button_jose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="40dp"
            android:text="No Feels"/>
        <LinearLayout
            android:id="@+id/contactLinks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp">
            <ImageView
                android:id="@+id/twitter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/twitter"/>
            <ImageView
                android:id="@+id/instagram"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/instagram"
                android:layout_marginLeft="20dp"/>
            <ImageView
                android:id="@+id/linkedIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/linkedin"
                android:layout_marginLeft="20dp"/>
            <ImageView
                android:id="@+id/wordpress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/wordpress"
                android:layout_marginLeft="20dp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>